{
    "manifest_version": 3,
    "name": "Medium Scheduled publications",
    "description": "Shows whether your story is scheduled for publication",
    "version": "0.0.1",
    "icons": {
        "16": "logo/logo-16.png",
        "48": "logo/logo-48.png",
        "128": "logo/logo-128.png"
    },
    "action": {
        "default_title": "Medium Scheduled Stories",
        "default_popup": "popup/popup.html"
    },
    "permissions": [],
    "content_scripts": [{
        "js": ["src/scheduled-post.js"],
        "matches": [
            "*://*.medium.com/p/*"
        ],
        "css": [
            "css/scheduled.css"
        ]
    }]
}