{
    "manifest_version": 3,
    "name": "Medium Scheduled publications",
    "description": "Shows whether your story is scheduled for publication",
    "version": "0.0.1",
    "icons": {
        "16": "logo/logo-16.png",
        "48": "logo/logo-48.png",
        "128": "logo/logo-128.png"
    },
    // TODO: create a link to other extension
    "options_page": "settings/settings.html",
    "action": {
        "default_title": "Medium Scheduled publications",
        "default_popup": "popup/popup.html"
    },
    "permissions": [],
    "host_permissions": [
        "https://*.medium.com/*",
        "https://medium.com/*"
    ],
    "background": {
        "service_worker": "service-worker.js"
    },
    "content_scripts": [{
        "js": ["foreground.js"],
        "matches": [
            "https://*.medium.com/*",
            "https://medium.com/*"
        ]
    }]
}